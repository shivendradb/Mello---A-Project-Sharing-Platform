<!DOCTYPE html>
<html>
    <head>
        <title>Mello!</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="stylesheet" href="/stylesheets/landing.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    </head>
    <body>

            <nav class = "navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">Mello!</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <% if(!currentUser){ %>
                                    <li><a class="navbar-top-left" href="/login">Login</a></li>
                                    <li><a class="navbar-top-left" href="/register">Sign Up</a></li>
                                <% } else { %>
                                    <span class="navbar-top-left currentuser">  Logged in as: <%= currentUser.username %></span>
                                <li><a class="navbar-top-left" href="/logout">Logout</a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </nav>
                <div class="container">
                    <% if(error && error.length>0){ %>
                        <div class="alert alert-danger" role="alert">
                            <%=error%>
                        </div>
                    <% } %>
                    <% if(success && success.length>0){ %>
                        <div class="alert alert-success" role="alert">
                            <%=success%>
                        </div>
                    <% } %>
                </div>
                

